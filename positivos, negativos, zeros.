#include <iostream>

int main()
{
    int num, pos = 0, neg= 0, zero= 0;
  
    for (int i = 0; i < 10; i++)
    {
        printf("Digite um numero inteiro: ");
            scanf_s("%d", &num);

            if (num >= 1)
            {
                num = pos++;
            }
                 else if  (num <= -1)
                 {
                    num = neg++;
                 }
                 else
                    {
                    num = zero++;
                    }
                
    }
    printf("A quantidade de numeros positivos: %d \n", pos );
    printf("A quantidade de numeros negativos: %d \n ", neg);
    printf("A quantidade de zeros: %d \n", zero);

    return 0;
}

